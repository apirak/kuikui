<h1>What's happening ?</h1>
<br/>
<%= form_for @message, :url => messages_path, :html => { :class => :form } do |f| -%>
  <%= render :partial => "form", :locals => {:f => f} %>
<% end -%>



<table class="table table-striped">
 <thead>
  <tr>
    <th>ID</th>
    <th>
      <%= t("activerecord.attributes.message.content", :default => t("activerecord.labels.content", :default => "Content")) %>
    </th>
    <th>Created at</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @messages.each do |message| -%>
   <tr>
    <td><%= message.id %></td>
        <td><%= link_to message.content, message_path(message) %>
    </td>
        <td><%= message.created_at %></td>
    <td>
      <%= link_to "Show", message_path(message) %>
      <%= link_to "Edit", edit_message_path(message) %>
      <%= link_to "Destroy", message_path(message), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
    </td>
    </tr>
    <% end -%>
   </tbody>
</table>

<%= link_to "New", new_message_path, :class => 'btn btn-primary' %>
